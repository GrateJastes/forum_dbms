{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext"],
    "allowJs": true,
    "outDir": "./dist",

    "strict": true,

    "baseUrl": ".",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": [
    "./src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
